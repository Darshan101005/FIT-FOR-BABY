rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Helper function to check if user is superadmin
    function isSuperAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // User's steps subcollection
      match /steps/{stepId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // User's food logs subcollection
      match /foodLogs/{logId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // User's weight logs subcollection
      match /weightLogs/{logId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // User's exercise logs subcollection
      match /exerciseLogs/{logId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // User's appointments subcollection
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      // User's messages subcollection
      match /messages/{messageId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(userId) || isAdmin();
      }
    }
    
    // Admins collection
    // NOTE: In production, tighten these rules to only allow superadmin
    match /admins/{adminId} {
      allow read: if isAuthenticated();
      // For development: allow any authenticated user to create/update admins
      // For production: change to isSuperAdmin()
      allow create, update: if isAuthenticated();
      allow delete: if isSuperAdmin() || isAdmin();
    }
    
    // Questionnaire responses
    match /questionnaireResponses/{responseId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // Nurse visits (scheduled by admin)
    match /nurseVisits/{visitId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Support requests
    match /supportRequests/{requestId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAdmin();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }
    
    // App settings (read-only for users)
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // FAQ items
    match /faqs/{faqId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }
    
    // Partner connections
    match /partnerConnections/{connectionId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || 
                     resource.data.partnerId == request.auth.uid ||
                     isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                              (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Couples collection (user onboarding)
    match /couples/{coupleId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isSuperAdmin();
    }
  }
}

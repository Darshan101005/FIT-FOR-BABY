rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Profile pictures
    match /profilePictures/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Step proof images
    match /stepProofs/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Food log images
    match /foodImages/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Exercise proof images
    match /exerciseProofs/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Message attachments
    match /messageAttachments/{conversationId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Admin uploads (reports, documents)
    match /adminUploads/{fileName} {
      allow read: if isAuthenticated();
      // Admin check would require custom claims or Firestore lookup
      allow write: if isAuthenticated();
    }
  }
}
